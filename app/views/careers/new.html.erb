          %>
          <%# alterante header for form %>
          <%# form_with(model:[ @user, project], local: true) do |f| %>
      <%= form_for @candidate, url: '/careers#create' do |f| %>
        <% if @candidate.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@candidate.errors.count, "error") %> prohibited this project from being created</h2>

            <ul>
              <% @candidate.errors.each do |error|%>
                <li><%= error.full_message %></li>
              <%end%>
            </ul>
          </div>
        <%end%>

        <div class="field">
          <%= f.label :position_applying_for %><br />
          <%# f.select :position, autofocus: true, autocomplete: "position" %>
          <%= f.select(:position, ['full-time', 'part-time', 'seasonal'], {}, { :class => 'position-field'}) %>
        </div>

      

          <div class="field">
          <%= f.label :name, "Your preferred Name:" %> <br />
          <%= f.text_field :name, autocomplete: "name" %>
        </div>


        
        <div class="field">
          <%= f.label :phone_number %> <br />
          <%= f.text_field :phone_number, autocomplete: "phone number"%>
        </div>

        <div class="field" >
          <%= f.label :age, "What is your age:"%>
          <%= f.number_field :age, value: '18' %>
        </div>
          <div class="field">
          <%= f.label :current_address %>
          <i >( street number, street name, apt # if applicable )</i>
          <%= f.text_field :address, required: true, class: '' %>
        </div>

          <div class="field">
          <%= f.label :address_zip_code%>
          <%= f.number_field :zip_code, value:'71901' %>
        </div>


        <div class="actions mt-3">
          <%= f.submit "Submit" %>
        </div>
      <% end %>
      </div>

      <%= link_to 'Back', :back  %>
      <%= javascript_pack_tag 'careers-new' %>
</div>

